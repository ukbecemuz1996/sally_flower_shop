<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data >
       <record id="flowers_access_rule" model="ir.rule">
            <field name="name">Flowers Access Rule</field>
            <field name="model_id" ref="model_product_product"/>
            <field name="domain_force">[(1,'=',1)] if user.user_has_groups('sally.group_gardener') else [('is_flower','=',False)]</field>
        </record>

    </data>

    <data >
        <record id="gardeners_access_rule" model="ir.rule">
           <field name="model_id" ref="model_product_product"/>
           <field name="groups" eval="[(4, ref('sally.group_gardener'))]"/>
           <field name="domain_force">['|',('gardeners_ids','=',False),('gardeners_ids','in',user.id)]</field>

        </record>
    </data>



</odoo>